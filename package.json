{
  "name": "otto",
  "private": true,
  "packageManager": "bun@1.3.4",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "otto:build": "turbo run build --filter=@otto/core",
    "otto": "bun run otto:build && node packages/core/dist/cli.js",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  }
}
