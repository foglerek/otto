{
  "name": "@otto/core",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "otto": "./bin/otto.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "compile": "node script/build-binary.js",
    "build:compile": "bun run build && node script/build-binary.js",
    "ensure:binary": "node script/ensure-binary.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
    "test": "node --test test/**/*.test.js",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\""
  },
  "dependencies": {
    "@otto/config": "workspace:*",
    "@otto/ports": "workspace:*",
    "@otto/ui-opentui": "workspace:*",
    "jiti": "^2.4.2"
  },
  "optionalDependencies": {
    "@otto/core-darwin-arm64": "workspace:*",
    "@otto/core-darwin-x64": "workspace:*",
    "@otto/core-linux-arm64": "workspace:*",
    "@otto/core-linux-x64": "workspace:*",
    "@otto/core-windows-arm64": "workspace:*",
    "@otto/core-windows-x64": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
